<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_round_bg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.dialogs.EvaluationDialogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/b_business"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="4dp"
                android:text="@string/j_offre_des_services"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="marquee" />

            <ImageView
                android:id="@+id/i_business"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"

                android:scaleType="fitCenter"
                android:src="@drawable/ic_search"
                android:textSize="14sp"
                app:tint="@color/white"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_client"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_yellow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:text="@string/je_cherche_des_services"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/i_client"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add"
                android:textSize="14sp"
                app:tint="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_afrili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_button_gray"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/i_afrili"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pan"
            android:textSize="14sp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/t_afrili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:lines="3"
            android:padding="5dp"
            android:text="@string/j_ai_pas_de_servcies_mais_je_suis_disponible_pour_faire_des_t_ches_selon_la_demande"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>