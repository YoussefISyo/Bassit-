<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_bg"
    android:gravity="center_vertical"
    tools:context=".ui.fragments.RappelFragment">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rendez-vous"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"

            />

        <EditText
            android:id="@+id/t_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="220dp"
            android:hint="Date"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title"
            android:drawableTint="@color/colorAccent"
            android:drawableRight="@drawable/ic_calender"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/t_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:hint="Heure"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/t_date"
            android:drawableTint="@color/colorAccent"
            android:drawableRight="@drawable/ic_time"
            android:layout_marginBottom="10dp"
            />


        <Button
            android:id="@+id/btn_ok"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="@string/text_envoyer" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_time"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/btn_ok"
            android:text="@string/text_cancel" />
    </RelativeLayout>

</RelativeLayout>