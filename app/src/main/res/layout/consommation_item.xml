<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:padding="10dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_margin="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/t_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carboussa"
                android:textAlignment="viewStart"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/t_montant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkgray" />


            <TextView
                android:id="@+id/t_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_designation"
                android:text="Cité 630 Block 15 N°07"
                android:textColor="@color/color_gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/t_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_type"
                android:text="10/10/10"
                android:textColor="@color/color_gray"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/t_montant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:text="69 000,00"
                android:layoutDirection="ltr"
                android:textColor="@color/darkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t_etat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_montant"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/colorPrimary"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Entrant"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>