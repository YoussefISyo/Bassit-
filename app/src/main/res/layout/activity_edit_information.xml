<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mToolbarDetailsInfo"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/toolbarText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modifier_mes_informations"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/me"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nom"
                            android:textColor="@color/color_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:layout_marginHorizontal="8dp"/>

                        <EditText
                            android:id="@+id/et_nom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/nom"
                            android:inputType="textPersonName"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pr_nom"
                            android:textColor="@color/color_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="8dp"/>

                        <EditText
                            android:id="@+id/et_prenom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/pr_nom"
                            android:inputType="textPersonName"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_description"
                            android:textColor="@color/color_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="8dp"/>

                        <EditText
                            android:id="@+id/et_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:hint="@string/text_description"
                            android:inputType="text"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textColor="@color/color_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="8dp"/>

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/email"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/t_l_phone"
                            android:textColor="@color/color_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="8dp"/>

                        <LinearLayout
                            android:id="@+id/layout_phone_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:layoutDirection="ltr">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_algeria_flag" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="22dp"
                                android:text="+213"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_telephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/light"
                                android:ems="10"

                                android:inputType="phone"
                                android:textColorHint="@color/light"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/adresse_compl_te"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <EditText
                            android:id="@+id/et_adresse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/adresse_compl_te"
                            android:inputType="text"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/black"
                            android:drawableEnd="@drawable/ic_location"
                            android:drawableTint="@color/colorPrimary"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ccp_information"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nom_et_pr_nom_compte_ccp"
                            android:textColor="@color/color_gray"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            android:layout_marginHorizontal="8dp"/>

                        <EditText
                            android:id="@+id/t_nomprenomccp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/nom_et_pr_nom_compte_ccp"
                            android:inputType="text"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/num_ro_ccp"
                            android:textColor="@color/color_gray"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            android:layout_marginHorizontal="8dp"/>

                        <EditText
                            android:id="@+id/t_ccp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/num_ro_ccp"
                            android:inputType="text"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/security"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <EditText
                            android:id="@+id/t_old"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/ancien_mot_de_passe"
                            android:inputType="textPassword"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/et_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/nouveau_mot_de_passe"
                            android:inputType="textPassword"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/et_pwd2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light"
                            android:ems="10"
                            android:hint="@string/confirmation_mot_de_passe"
                            android:inputType="textPassword"
                            android:textColorHint="@color/light"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="12dp">

                    <Switch
                        android:id="@+id/switch_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/txt_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pause_mes_services"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <Button
                        android:id="@+id/b_annuler"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button_gray"
                        android:text="@string/text_cancel"
                        android:textColor="@color/white"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/b_inscrire"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="@string/text_enregistrer"
                        android:textColor="@color/white"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <include layout="@layout/loading_layout" />
</RelativeLayout>