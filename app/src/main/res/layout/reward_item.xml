<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:paddingBottom="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/t_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/img"
            android:textAlignment="viewStart"
            android:text="HADRI Hichem"
            android:layout_toStartOf="@id/b_activer"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_name"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/b_activer"
            android:layout_toEndOf="@id/img"
            android:text="300 pts"
            android:textAlignment="viewStart"
            android:textColor="@color/color_text"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_points"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/b_activer"
            android:layout_toEndOf="@id/img"
            android:text="300 pts"
            android:textAlignment="viewStart"
            android:textColor="@color/light_red"
            android:textSize="12sp" />

        <Button
            android:id="@+id/b_activer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_button"
            android:text="@string/text_activer"
            android:textColor="@color/white"
            android:textSize="11sp" />
        <Button
            android:id="@+id/t_encours"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:visibility="gone"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="center"
            android:background="@drawable/round_button_yellow"
            android:drawableStart="@drawable/ic_check"
            android:drawableTint="@color/black"
            android:text="@string/text_actif"
            android:textSize="11sp"
            android:textColor="@color/black" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

