<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.RegisterActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/last_step"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_circle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bassit"
                    android:tint="@color/midgray"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"/>

                <EditText
                    android:id="@+id/et_nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light"
                    android:maxLines="1"
                    android:hint="@string/nom"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/midgray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"/>

                <EditText
                    android:id="@+id/et_prenom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light"
                    android:maxLines="1"
                    android:hint="@string/pr_nom"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/midgray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_description"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/midgray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/adresse_compl_te"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/midgray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:drawableEnd="@drawable/ic_location"
                    android:drawableTint="@color/greenSeafoam"
                    android:clickable="true"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/b_inscrire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/round_button_primary"
                android:clickable="true"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/txtVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/continue_word"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/txtVerify"
                    android:src="@drawable/ic_arrow_right" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/loading_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>